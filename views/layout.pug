doctype html
html
  head
    title= title
    meta(name="viewport" content="width=device-width,initial-scale=1")
    link(rel='stylesheet', href='/stylesheets/style.css')
  body#body
    svg#sun.button(width="30" height="30" onclick='lightmode()')
      circle(cx="15" cy="15" r="6" fill="currentColor")

      line(
        id="ray"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        x1="15"
        y1="1"
        x2="15"
        y2="4")

      use(href="#ray" transform="rotate(45 15 15)")
      use(href="#ray" transform="rotate(90 15 15)")
      use(href="#ray" transform="rotate(135 15 15)")
      use(href="#ray" transform="rotate(180 15 15)")
      use(href="#ray" transform="rotate(270 15 15)")
      use(href="#ray" transform="rotate(225 15 15)")
      use(href="#ray" transform="rotate(315 15 15)")
    svg#moon.hidden.button(width="30" height="30" onclick='lightmode()')
      path(fill="currentColor",d="M 23, 5A 12 12 0 1 0 23, 25A 12 12 0 0 1 23, 5"
      )
</svg>
    block content
    script.
      function lightmode() {
        var element = document.getElementById("body");
        element.classList.toggle("lightmode");
        var element = document.getElementById("sun");
        element.classList.toggle("hidden");
        var element = document.getElementById("moon");
        element.classList.toggle("hidden");
        var element = document.getElementById("termino-input");
        element.focus()
      }
